<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>

<div class="field">
<h4>Title</h4>
<%= f.text_field :title, class:"book_title" %>
</div>
<div class="field">
<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %>
</div>

<div class="action">
<%= f.submit 'Update Book' %>
</div>

<%= link_to "Show", post_path(@post), class:"show_#{@post}" %> | <%= link_to "Back", posts_path, class:"back" %>
<% end %>
