<body>
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to "Show", post_path(post), class:"show_#{post.id}" %></td>
      <td><%= link_to "Edit", edit_post_path(post), class:"edit_#{post.id}" %></td>
      <td><%= link_to "Destroy", post_path(post), class:"destroy_#{post.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </table>
<h2>New book</h2>

<%= form_for(@post) do |f| %>

<div class="field">
<h4>Title</h4>
<%= f.text_field :title, class:"book_title" %>
</div>
<div class="field">
<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %>
</div>

<div class="action">
<%= f.submit 'Create Book' %>
</div>

<% end %>

</body>

