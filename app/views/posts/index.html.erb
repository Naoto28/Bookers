<body>
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to "Show", post_path(post) %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post_path(post), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </table>
<h2>New book</h2>

<%= form_for(@post) do |f| %>

<div class="field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>
<div class="field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>

<div class="action">
<%= f.submit 'Create Book' %>
</div>

<% end %>

</body>
